<%- include('container/Header/Header') %>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <%- include('container/Sidebar/Sidebar') %>
            <div class="content">
                <%- include('container/Navbar/Navbar') %>
                    <div class="container-fluid pt-4 px-4">
                        <div class="bg-light text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Danh sách đơn đặt hàng</h6>
                            </div>
                            <div class="table-responsive">
                                <table class="table text-start align-middle table-bordered table-hover mb-0">
                                    <thead>
                                        <tr class="text-dark">
                                            <th>ID</th>
                                            <th scope="col">Tên khách hàng</th>
                                            <th scope="col">Địa chỉ</th>
                                            <th scope="col">Số điện thoại</th>
                                            <th scope="col">Tổng giá</th>
                                            <th scope="col">Ngày đặt</th>
                                            <th scope="col">Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let date = new Intl.DateTimeFormat('en-US', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit' })
                                        for(var i=0; i < dathang.length; i++) { %>
                                            <tr>
                                                <td><b>
                                                        <%= i+1 %>
                                                    </b></td>
                                                     <% if (dathang[i].tenkhach) { %>
                                                        <td>
                                                            <%= dathang[i].tenkhach %>
                                                        </td>
                                                        <%} %>
                                                        <% if (dathang[i].khachhang) { %>
                                                            <td>
                                                                <%= dathang[i].khachhang.username %>
                                                            </td>
                                                            <%}  %>
                                                   
                                                
                                                    <td>
                                                        <%= dathang[i].diachi %>
                                                    </td>
                                                    
                                                    <td>
                                                        0<%= dathang[i].sodienthoai %>
                                                    </td>
                                                <td>
                                                    <%= dathang[i].gia %>
                                                </td>
                                                <td>
                                                    <%= date.format(Date.parse(dathang[i].createdAt)) %>
                                                </td>
                                                <td>
                                                    <%= dathang[i].trangthai %>
                                                </td>
                                                <td>
                                                    <a class="form-group btn btn-success" type="button"
                                                        href="/chitietdonhang?id=<%= dathang[i]._id%>"><i
                                                            class="fas fa-eye"></i>&ensp; xem chi tiết</a>&ensp;
                                                    <a class="form-group btn btn-success" type="button"
                                                        href="/sua-dathang?id=<%= dathang[i]._id%>">
                                                        <i class="fas fa-pen-square"></i>Sửa
                                                    </a>
                                                    <!-- <a style="color:#fff;" class="form-group btn btn-danger xoadathang"
                                                        type="button" data-id=<%=dathang[i]._id %> ><i
                                                            class="fas fa-trash"></i> Xóa
                                                    </a> -->
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <%- include('container/Footer/Footer') %>
            </div>
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <%- include('container/JavaScript/JavaScript') %>