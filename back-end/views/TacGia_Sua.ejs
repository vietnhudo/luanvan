<%- include('container/Header/Header') %>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <%- include('container/Sidebar/Sidebar') %>
            <div class="content">
                <%- include('container/Navbar/Navbar') %>
                    <div class="col-12">
                        <form method="POST" id="sua_tacgia" action="/api/tacgia/suatacgia">
                            <div class="bg-light rounded h-au p-4">
                                <h3 class="mb-4">Sửa tác giả</h3>
                                <div class="form-floating mb-3">
                                    <input type="hidden" name="dmTacGiaId" value="<%= tacgia._id %>">
                                    <input type="text" placeholder="tên tác giả" class="form-control" name="tentacgia" value="<%= tacgia.tentacgia %>">
                                    <label> Nhập tên tác giả</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" placeholder="nơi sinh" class="form-control" name="noisinh" value="<%= tacgia.noisinh %>">
                                    <label>Nhập nơi sinh</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" placeholder="tiểu sử" class="form-control" name="tieusu" value="<%= tacgia.tieusu %>">
                                    <label>Nhập tiểu sử</label>
                                </div>
                                <div class="pt-4">
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                </div>
                        </form>
                    </div>
            </div>
            <%- include('container/Footer/Footer') %>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <%- include('container/JavaScript/JavaScript') %>