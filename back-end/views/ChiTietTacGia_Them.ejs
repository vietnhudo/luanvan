<%- include('container/Header/Header') %>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <%- include('container/Sidebar/Sidebar') %>
            <div class="content">
                <%- include('container/Navbar/Navbar') %>
                    <div class="col-12">
                        <form action="/api/chitiettacgia" method="POST" id="them_chitiettacgia">
                            <div class="bg-light rounded h-au p-4">
                                <h3 class="mb-4">Thêm chi tiết tác giả</h3>
                                <div class="form-floating mb-3">
                                    <input type="text" placeholder="chủ biên" class="form-control" name="chubien">
                                    <label> Nhập chủ biên</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingSelect" name="idsach"
                                        aria-label="Floating label select example">
                                        <% for(var i = 0; i < sach.length; i++) { %>
                                            <option value="<%= sach[i]._id %>">
                                                <%= sach[i].ten %>
                                            </option>
                                            <% } %>
                                    </select>
                                    <label for="floatingSelect">Sách</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingSelect" name="idtacgia"
                                        aria-label="Floating label select example">
                                        <% for(var i = 0; i < tacgia.length; i++) { %>
                                            <option value="<%= tacgia[i]._id %>">
                                                <%= tacgia[i].tentacgia %>
                                            </option>
                                            <% } %>
                                    </select>
                                    <label for="floatingSelect">Tác Giả</label>
                                </div>
                                <div class="pt-4">
                                    <button type="submit" class="btn btn-primary">Thêm chi tiết tác giả</button>
                                </div>
                        </form>
                    </div>
            </div>
            <%- include('container/Footer/Footer') %>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <%- include('container/JavaScript/JavaScript') %>